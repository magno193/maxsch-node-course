doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
    style(type="text/css").
      a.active {
        font-weight: bold;
      }
  body 
    header 
      nav
        ul
          li
            a(href="/" class=(path === '/') ? 'active' : '') Cadastro
          li
            a(href="/users" class=(path === '/users') ? 'active' : '') Lista
    main
      block content