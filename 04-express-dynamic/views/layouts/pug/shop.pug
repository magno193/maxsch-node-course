extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="css/main.css")
    link(rel="stylesheet", href="css/product.css")

block content
  main
    if prods.length
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src="https://semantic-ui.com/images/wireframe/image.png", alt="A Book")
            .card__content
              h2.product__price $19.99
              p.product__description Um livro bastante interessante sobre muitas coisas
            .card__actions 
              button.btn Adicionar ao Carrinho
    else
      h1 Não há produtos
